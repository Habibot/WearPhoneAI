<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="From"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/heartstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ems="3"
        android:inputType="number"
        android:contentDescription="Heart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"/>

    <EditText
        android:id="@+id/heartend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="number"
        android:contentDescription="Heart"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/heartstart"/>


    <EditText
        android:id="@+id/cadencestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ems="3"
        android:inputType="number"
        android:contentDescription="Cadence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heartstart"/>

    <EditText
        android:id="@+id/cadenceend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="number"
        android:contentDescription="Cadence"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="@id/heartend"
        app:layout_constraintLeft_toRightOf="@+id/heartstart"/>

    <EditText
        android:id="@+id/speedstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ems="3"
        android:inputType="number"
        android:contentDescription="Speed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cadencestart"/>

    <EditText
        android:id="@+id/speedend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="number"
        android:contentDescription="Speed"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="@id/cadenceend"
        app:layout_constraintLeft_toRightOf="@+id/speedstart"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Treshold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/heartend"
        app:layout_constraintRight_toRightOf="@id/heartend"
        app:layout_constraintStart_toEndOf="@id/heartend"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadence Treshold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/cadenceend"
        app:layout_constraintRight_toRightOf="@id/cadenceend"
        app:layout_constraintStart_toEndOf="@id/cadenceend"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed Treshold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/speedend"
        app:layout_constraintRight_toRightOf="@id/speedend"
        app:layout_constraintStart_toEndOf="@id/speedend"/>

</androidx.constraintlayout.widget.ConstraintLayout>